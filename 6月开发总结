4.设置带有模态框来替代alert
//封装alert方法
function alert(data,callback){
	var title,mess,ico;
	if(typeof(data)==='object'){
		if(data.title==null || undefined==data.title){
			title="系统提示";
		}else{
			title=data.title;
		}
		if(data.mess==null || undefined==data.mess){
			mess="请确认您的操作！";
		}else{
			mess=data.mess;
		}
		if(data.ico==null || undefined==data.ico){
			ico="warn";
		}else{
			ico=data.ico;
		}
	}else if(typeof(data)==='function'){
		title="系统提示";
		mess="alert参数设置错误！";
		ico="warn";
	}else{
		title="系统提示";
		mess=data;
		ico="warn";
	}
	$("#alertPop").remove();
	var alertmodal="<div id='alertPop' class='modal fade' id='myModal' tabindex='-1' role='dialog' aria-labelledby='myModalLabel' aria-hidden='false' data-backdrop='static'>";
	alertmodal+="<div class='modal-backdrop fade in' style='height: "+$(window).height()+"px; display:none;'></div>";
	alertmodal+="<div class='modal-dialog' style='width: 350px; margin: 0 auto; box-shadow:0 0 20px #555'><div class='modal-content' style='border-radius:5px;border:none;'><div class='modal-header' style='background:#f8f8f8; border-radius:5px 5px 0 0'>";
	alertmodal+="<button type='button' class='close' data-dismiss='modal' aria-hidden='true' style='margin-top:2px'>×</button>";
	alertmodal+="<h4 class='modal-title' id='myModalLabel' style='font-family:\"Microsoft YaHei\";color:#555'>"+title+"</h4>";
	alertmodal+="</div><div class='modal-body' style='padding:20px 30px 30px'>";
	switch(ico){
	case "warn":alertmodal+="<span style='position:relative;top:10px;margin-right:5px;font-size:35px;color:#e30808' class='glyphicon glyphicon-exclamation-sign'></span>";break;
	case "ask":alertmodal+="<span style='position:relative;top:10px;margin-right:5px;font-size:35px;color:#ff9900' class='glyphicon glyphicon-question-sign'></span>";break;
	case "succeed":alertmodal+="<span style='position:relative;top:10px;margin-right:5px;font-size:35px;color:#0d9727' class='glyphicon glyphicon-ok-sign'></span>";break;
	}
	alertmodal+="<span style='font:normal 16px/32px \"Microsoft YaHei\"'>"+mess+"</span></div>";
	alertmodal+="<div class='modal-footer' style='text-align:center'><button type='button' onclick='doOk();' class='btn btn-primary' style='padding:5px 20px; display:inline-block; background:#ff9900; border-color:#ff9900;font-family:\"Microsoft YaHei\";'>确定</button></div></div></div></div>";
	$("body").after(alertmodal);
	$("#alertPop").modal("show");
	var dialogmgt=$(window).height()-$(".modal-dialog").height();
	$("#alertPop .modal-dialog").css("marginTop",dialogmgt*0.5-50+"px");
	document.body.onselectstart = function() {
		return false;
	};
	this.doOk = function() {
		$("#alertPop").modal("hide");
		if (callback) {
			callback();
		}
		document.body.onselectstart = function() {
		};
	}
	$('#alertPop').on('hidden.bs.modal', function () {
		$('#alertPop').remove();
	})
}

/*alert(
		{						//可以为object，也可以为string,为string时title、ico为默认值
		title:"系统提示",  		//提示框标题，可为空默认值为"系统提示"
		mess:"请确认您的操作！",		//提示的信息，可为空默认值为"请确认您的操作！"
		ico:"warn"   			//提示图标，warn：红色感叹号，ask：橙色问号，succeed，绿色对号，可为空默认值为warn
		},
		callback 				//回调函数
